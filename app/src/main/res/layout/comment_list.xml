<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="horizontal"
    tools:context=".CommentFragment">

    <ImageView
        android:id="@+id/commentFragmentProfilePicture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/stock_profile_picture"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tvCommentUsername"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Fragment Username" />
        <TextView
            android:id="@+id/tvCommentRating"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Fragment Rating" />

        <TextView
            android:id="@+id/tvCommentMessage"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Fragment Comment " />


    </LinearLayout>

</LinearLayout>